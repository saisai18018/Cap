pipeline {
    agent any

    environment {
        GIT_REPO = 'https://github.com/saisai18018/Cap.git'
        BRANCH = 'main'
        PROJECT_DIR = 'CapDemo'
    }

    stages {
        stage('Checkout') {
            steps {
                echo "üì• Checking out code from GitHub..."
                git branch: "${BRANCH}", url: "${GIT_REPO}"
            }
        }

        stage('Build') {
            steps {
                dir("${PROJECT_DIR}") {
                    echo "‚öôÔ∏è Running Maven clean and build (with tests)..."
                    bat 'mvn clean install'
                }
            }
        }

        stage('Test') {
            steps {
                dir("${PROJECT_DIR}") {
                    echo "üß™ Running TestNG suite..."
                    bat 'mvn test -Dsurefire.suiteXmlFiles=testng.xml'
                }
            }
        }

        stage('Archive Reports') {
            steps {
                dir("${PROJECT_DIR}") {
                    echo "üìÇ Archiving JUnit XML reports..."
                    junit 'target/surefire-reports/*.xml'
                    archiveArtifacts artifacts: 'target/surefire-reports/*', fingerprint: true
                }
            }
        }

        stage('Publish TestNG HTML Report') {
            steps {
                dir("${PROJECT_DIR}") {
                    echo "üåê Publishing TestNG HTML report..."
                    publishHTML(target: [
                        allowMissing: false,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'test-output',
                        reportFiles: 'index.html',
                        reportName: 'TestNG Report'
                    ])
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Build SUCCESSFUL!"
        }
        failure {
            echo "‚ùå Build FAILED! Please check logs and reports."
        }
        always {
            echo "Build finished with status: ${currentBuild.currentResult}"
        }
    }
}
