pipeline {
    agent any

    environment {
        GIT_REPO = 'https://github.com/saisai18018/Cap.git'
        BRANCH = 'main'
        PROJECT_DIR = 'CapDemo'
        APP_ENV = 'dev'
    }

    stages {
        stage('Checkout') {
            steps {
                echo "üì• Checking out code from GitHub..."
                git branch: "${BRANCH}", url: "${GIT_REPO}"
            }
        }

        stage('Build') {
            steps {
                dir("${PROJECT_DIR}") {
                    echo "‚öôÔ∏è Building project (skip tests here)..."
                    bat 'mvn clean install -DskipTests'
                }
            }
        }

        stage('Test') {
            steps {
                dir("${PROJECT_DIR}") {
                    echo "üß™ Running only login/cart tests..."
                    bat 'mvn test -Dsurefire.suiteXmlFiles=testng.xml'
                }
            }
            post {
                always {
                    // Publish TestNG results to Jenkins
                    publishTestNGResults testResultsPattern: '**/target/surefire-reports/testng-results.xml'
                }
            }
        }

        stage('Run App') {
            steps {
                dir("${PROJECT_DIR}") {
                    echo "üöÄ Running the Java App..."
                    bat 'java -cp target/CapDemo-0.0.1-SNAPSHOT.jar com.example.App'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo "üì¶ Deploying to ${env.APP_ENV} environment..."
            }
        }
    }

    post {
        success {
            echo "‚úÖ Build SUCCESSFUL!"
        }
        failure {
            echo "‚ùå Build FAILED! Please check logs and reports."
        }
        always {
            echo "Build finished with status: ${currentBuild.currentResult}"
        }
    }
}
